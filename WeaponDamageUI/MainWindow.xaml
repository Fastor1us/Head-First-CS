<Window x:Class="WeaponDamageUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="SwordDamage" Height="175" Width="300">
    <Grid Margin="10 5 10 10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <CheckBox x:Name="flamingCheckBox" Content="Flaming" HorizontalAlignment="Center" VerticalAlignment="Center" Width="70"/>
        <CheckBox x:Name="magicCheckBox" Grid.Row="1" Content="Magic" HorizontalAlignment="Center" VerticalAlignment="Center" Width="70"/>
        <Button Content="Roll for damage" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" Width="130" Height="30" Click="Button_Click" />
        <TextBlock x:Name="damageTextBlock" Grid.Column="1" HorizontalAlignment="Center" Grid.Row="2" TextWrapping="Wrap" Text="damage" VerticalAlignment="Center"/>
        <ListBox x:Name="weaponsListBox" Grid.Column="1" Grid.RowSpan="2" Margin="15,5,15,0" />
    </Grid>
</Window> 
 